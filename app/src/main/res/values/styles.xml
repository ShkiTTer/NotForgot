<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/img_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MainText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SecondText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorLightBlackText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AccentButton">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GrayButton" parent="AccentButton">
        <item name="android:backgroundTint">@color/colorGray</item>
        <item name="android:textColor">@color/colorBlackText</item>
    </style>
</resources>
